	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Program",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "deno",
			"runtimeArgs": [
				"run",
				"--allow-net",
				"--allow-read",
				"--inspect-brk",
				"index.ts"
			],
			"port": 9229,
			"skipFiles": ["\\<node_internals>\\**"],
			"smartStep": true
		}
	]
}
